{
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Swarm monorepo - Tools and utilities for Wasp development",
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "format": "pnpm -r run format",
    "format:check": "pnpm -r run format:check",
    "typecheck": "pnpm -r run typecheck",
    "changeset": "changeset",
    "changeset:autogenerate": "node .changeset/changeset-autogenerate.js",
    "changeset:autogenerate-batch": "node .changeset/changeset-autogenerate-batch.js",
    "changeset:conventional": "changeset-conventional",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "validate": "pnpm -r run validate && pnpm knip",
    "knip": "knip",
    "knip:fix": "knip --fix"
  },
  "keywords": [
    "monorepo",
    "wasp",
    "development-tools"
  ],
  "author": "Gary McPherson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/genyus/swarm.git"
  },
  "homepage": "https://github.com/genyus/swarm",
  "bugs": {
    "url": "https://github.com/genyus/swarm/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "changeset-conventional-commits": "^0.2.5",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "knip": "^5.66.2",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.17.1"
}
