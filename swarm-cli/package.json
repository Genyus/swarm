{
  "name": "@genyus/swarm",
  "version": "0.1.0",
  "description": "Standalone CLI for code generation in the Genyus/Swarm ecosystem",
  "bin": {
    "swarm": "./bin/swarm"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --out-dir dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "release": "semantic-release"
  },
  "keywords": [
    "cli",
    "codegen",
    "typescript",
    "wasp"
  ],
  "author": "Gary McPherson",
  "license": "MIT",
  "devDependencies": {
    "@prisma/client": "5.19.1",
    "@types/node": "^22.15.29",
    "@types/signale": "^1.4.7",
    "semantic-release": "^24.2.5",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "chalk": "^5.0.0",
    "commander": "^14.0.0",
    "signale": "^1.4.0"
  },
  "publishConfig": {
    "access": "public"
  }
}