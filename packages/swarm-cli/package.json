{
  "name": "@ingenyus/swarm-cli",
  "type": "module",
  "version": "0.1.0",
  "description": "A powerful TypeScript CLI tool for rapidly generating features, APIs, jobs, CRUD operations, and more in Wasp full-stack framework projects",
  "bin": {
    "swarm": "./bin/swarm"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm dlx rimraf dist && tsup && tsc --project tsconfig.dts.json",
    "build:watch": "tsc --watch",
    "repack": "pnpm dlx rimraf ingenyus-swarm-cli-* && pnpm pack",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "typecheck": "tsc --project tsconfig.typecheck.json",
    "postinstall": "prisma generate",
    "validate": "pnpm run build && pnpm run typecheck && pnpm run lint:fix && pnpm run format && pnpm test"
  },
  "keywords": [
    "cli",
    "codegen",
    "typescript",
    "wasp",
    "fullstack",
    "react",
    "nodejs",
    "prisma",
    "generator",
    "boilerplate"
  ],
  "author": "Gary McPherson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/genyus/swarm.git",
    "directory": "packages/swarm-cli"
  },
  "homepage": "https://github.com/genyus/swarm/tree/main/packages/swarm-cli#readme",
  "bugs": {
    "url": "https://github.com/genyus/swarm/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@prisma/client": "5.19.1",
    "@types/glob": "^8.1.0",
    "@types/node": "^24.3.0",
    "@types/signale": "^1.4.7",
    "glob": "^11.0.3",
    "prisma": "^5.19.1",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "@ingenyus/swarm-core": "workspace:*",
    "chalk": "^5.0.0",
    "commander": "^14.0.0",
    "signale": "^1.4.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
