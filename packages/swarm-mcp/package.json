{
  "name": "@ingenyus/swarm-mcp",
  "version": "0.1.0",
  "description": "Model Context Protocol (MCP) server for Swarm CLI integration, enabling AI agents to programmatically generate Wasp application code",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "swarm-mcp": "dist/cli/index.js"
  },
  "scripts": {
    "build": "pnpm dlx rimraf dist && tsup && tsc --project tsconfig.dts.json",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "typecheck": "tsc --project tsconfig.typecheck.json",
    "validate": "pnpm run build && pnpm run typecheck && pnpm run lint:fix && pnpm run format && pnpm test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "swarm",
    "wasp",
    "code-generation",
    "ai-assistant"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@ingenyus/swarm-core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.17.4",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "mime-types": "^3.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^2.1.9",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8"
  }
}
