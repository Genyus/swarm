# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, TypeScript, JSON, and related files
[*.{js,jsx,ts,tsx,json,jsonc}]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Package.json files
[package.json]
indent_style = space
indent_size = 2

# Configuration files
[*.{eslintrc,prettierrc}]
indent_style = space
indent_size = 2

# Test files
[*.{test,spec}.{js,ts}]
indent_style = space
indent_size = 2

# Declaration files
[*.d.ts]
indent_style = space
indent_size = 2
