{
  "name": "@ingenyus/swarm-core",
  "type": "module",
  "version": "0.1.0",
  "description": "Core Swarm logic - Shared generators, templates, utilities, and types for Wasp development",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm dlx rimraf dist && tsup && tsc --project tsconfig.dts.json && cp -r src/templates dist/",
    "build:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "typecheck": "tsc --project tsconfig.typecheck.json",
    "validate": "pnpm run build && pnpm run typecheck && pnpm run lint:fix && pnpm run format && pnpm test"
  },
  "keywords": [
    "wasp",
    "codegen",
    "generators",
    "templates",
    "typescript",
    "fullstack",
    "react",
    "nodejs",
    "prisma",
    "boilerplate",
    "shared-library"
  ],
  "author": "Gary McPherson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/genyus/swarm.git",
    "directory": "packages/swarm"
  },
  "homepage": "https://github.com/genyus/swarm/tree/main/packages/swarm#readme",
  "bugs": {
    "url": "https://github.com/genyus/swarm/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@mrleebo/prisma-ast": "^0.13.0",
    "chalk": "^5.0.0",
    "eta": "^4.0.1",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@prisma/client": "5.19.1",
    "@types/glob": "^8.1.0",
    "@types/node": "^22.15.31",
    "@types/signale": "^1.4.7",
    "glob": "^11.0.3",
    "prisma": "^5.19.1",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0",
    "vitest": "^3.1.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
