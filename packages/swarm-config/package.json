{
  "name": "@ingenyus/swarm-config",
  "type": "module",
  "version": "0.1.0",
  "description": "Enhanced Wasp configuration with Swarm-specific functionality",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm dlx rimraf dist && tsup && tsc --project tsconfig.dts.json && pnpm pack",
    "build:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "typecheck": "tsc --noEmit",
    "validate": "pnpm run build && pnpm run typecheck && pnpm run lint:fix && pnpm run format && pnpm test"
  },
  "keywords": [
    "wasp",
    "configuration",
    "swarm",
    "typescript",
    "fullstack",
    "react",
    "nodejs"
  ],
  "author": "Gary McPherson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/genyus/swarm.git",
    "directory": "packages/swarm-config"
  },
  "homepage": "https://github.com/genyus/swarm/tree/main/packages/swarm-config#readme",
  "bugs": {
    "url": "https://github.com/genyus/swarm/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "wasp-config": "*"
  },
  "peerDependenciesMeta": {
    "wasp-config": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0",
    "vitest": "^3.1.4",
    "wasp-config": "link:src/stubs/wasp-config"
  },
  "publishConfig": {
    "access": "public"
  }
}
