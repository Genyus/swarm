{
  "name": "@ingenyus/swarm",
  "type": "module",
  "version": "1.0.4",
  "description": "Core Swarm logic - including a CLI, MCP server, plugin framework and base types for custom generators",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "swarm": "./bin/cli",
    "swarm-mcp": "./bin/mcp"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rimraf dist && tsup && tsc --project tsconfig.dts.json && pnpm pack",
    "build:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "typecheck": "tsc --project tsconfig.typecheck.json",
    "validate": "pnpm run build && pnpm run typecheck && pnpm run lint:fix && pnpm run format && pnpm test"
  },
  "keywords": [
    "codegen",
    "generators",
    "templates",
    "typescript",
    "javascript",
    "boilerplate",
    "scaffolding",
    "plugin-system",
    "mcp",
    "ai-tools",
    "cli",
    "shared-library"
  ],
  "author": "Gary McPherson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Genyus/swarm",
    "directory": "packages/swarm"
  },
  "homepage": "https://github.com/Genyus/swarm/tree/main/packages/swarm#readme",
  "bugs": {
    "url": "https://github.com/Genyus/swarm/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@standard-schema/spec": "^1.0.0",
    "commander": "^14.0.2",
    "giget": "^2.0.0",
    "lilconfig": "^3.1.3",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "@types/node": "^24.10.1",
    "@types/signale": "^1.4.7",
    "@vitest/coverage-v8": "^3.2.4",
    "glob": "^11.0.3",
    "rimraf": "^6.1.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "zod": "^3.25.0 || ^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "temp": {
    "jsonrpc": "2.0",
    "id": 1,
    "method": "tools/call",
    "params": {
      "name": "generate-job",
      "arguments": {
        "feature": "root",
        "name": "sendEmail",
        "entities": [
          "Task"
        ]
      }
    }
  }
}
