{
  "name": "@ingenyus/swarm-wasp",
  "type": "module",
  "version": "2.0.0",
  "description": "Wasp-specific plugins for Swarm - Feature generators, commands, MCP tools, and enhanced Wasp configuration for Wasp development",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rimraf dist && tsup && tsc --project tsconfig.dts.json && pnpm copy-templates && pnpm pack",
    "build:watch": "tsc --watch",
    "copy-templates": "for dir in src/generators/*/templates; do if [ -d \"$dir\" ]; then generator=$(basename $(dirname $dir)); mkdir -p dist/generators/$generator/templates; cp -r $dir/* dist/generators/$generator/templates/; fi; done",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts",
    "format": "prettier --write --list-different src",
    "format:check": "prettier --check src",
    "typecheck": "tsc --project tsconfig.typecheck.json",
    "validate": "pnpm run build && pnpm run typecheck && pnpm test && pnpm run lint && pnpm run format"
  },
  "keywords": [
    "wasp",
    "codegen",
    "generators",
    "plugins",
    "templates",
    "configuration",
    "typescript",
    "fullstack",
    "react",
    "nodejs",
    "prisma",
    "boilerplate",
    "swarm"
  ],
  "author": "Gary McPherson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Genyus/swarm",
    "directory": "packages/swarm-wasp"
  },
  "homepage": "https://github.com/Genyus/swarm/tree/main/packages/swarm-wasp#readme",
  "bugs": {
    "url": "https://github.com/Genyus/swarm/issues"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "swarm": {
    "wasp": ">=0.18.0 <0.22.0"
  },
  "dependencies": {
    "@ingenyus/swarm": "workspace:*",
    "@mrleebo/prisma-ast": "^0.14.0",
    "eta": "^4.5.1",
    "semver": "^7.7.4"
  },
  "peerDependencies": {
    "wasp-config": "*",
    "zod": "^3.25.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "wasp-config": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/semver": "^7.7.1",
    "@vitest/coverage-v8": "^4.0.18",
    "glob": "^13.0.6",
    "rimraf": "^6.1.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "wasp-config": "link:src/wasp-config/stubs",
    "zod": "^4.3.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
